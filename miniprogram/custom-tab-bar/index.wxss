.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height:90rpx;
  background: #ffffff;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  justify-content: center;
  align-items: center;
}
.tab-bar-item {
  width: 100%;
  height: 100%;
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item .cover-image {
  margin-top:6rpx;
  width:20px;
  height:20px;
  filter:grayscale(80%);
}

.tab-bar-item cover-view {
  font-size: 24rpx;
}
