.product {
  width: 96vw;
  background-color: #ffffff;
  margin: 12rpx 8rpx;
  padding: 28rpx 26rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  box-sizing: border-box;

}

.item {
  display: flex;
  align-items: center;
  margin: 10rpx 0;
}

.title {
  font-weight: bold;
  font-size: 15px;
}

.price {
  margin-left: 40rpx;
  font-weight: 600;
}

.star {
  width: 40rpx;
  height: 40rpx;
  font-size: 16px;
  margin-right: 100rpx;
}

.flex {
  display: flex;
}

.flex-wrap {
  flex-wrap: wrap;
}

.tag {
  border: 1rpx solid #cccccc;
  text-align: center;
  width: 80rpx;
  color: white;
  border-radius: 10rpx;
  background-color: white;
  margin: 0 10rpx 10rpx 0;
}

.line {
  height: 1rpx;
  width: 100%;
  background-color: #cccccc;
  margin: 15rpx 0;
  padding: 0;
}

.button_primary {
  box-sizing: border-box;
  border-radius: 15rpx;
  transition: opacity 0.2s;
  color: #ffffff;
  text-align: center;
  margin-left: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 49px;
  height: 24px;
  background: #f85853;
  font-size: 12px;
  font-family: 'PingFangSC-Regular', 'PingFang SC', sans-serif, 'PingFangSC-Regular', 'PingFang SC', sans-serif-400;
  font-weight: 400;
}

.button_normal {
  box-sizing: border-box;
  border-radius: 15rpx;
  transition: opacity 0.2s;
  color: #ffffff;
  text-align: center;
  margin-left: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 49px;
  height: 24px;
  background: #03a9f4;
  font-size: 12px;
  font-family: 'PingFangSC-Regular', 'PingFang SC', sans-serif, 'PingFangSC-Regular', 'PingFang SC', sans-serif-400;
  font-weight: 400;
}

.flex {
  display: flex;
  align-items: center;
}

.justify-content-space-between {
  justify-content: space-between;
}

.button {
  width:320rpx!important;
  font-size: 26rpx!important;
  font-weight: 400;
  height: 28px;
  line-height: 28px;
  margin: 0;
  padding: 0;
  text-align: center;
}