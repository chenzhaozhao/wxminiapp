.box {
  height: 100vh;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.mapview {
  height: 50%;
  width: 100%;
}

.map {
  width: 100%;
  height: 100%;
  border: 2rpx solid #ccc;
  margin: 20rpx auto;
  border-radius: 20rpx;
}

.address {
  position: absolute;
  z-index: 100;
  width: 100%;
  text-indent: 20rpx;
  height: 92vh;
  background-color: #f2f2f2
}

.address_item {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 1rpx solid #f2f2f2;
}