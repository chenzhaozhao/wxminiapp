.detail {
  height: 100vh;
  width: 100vw;
  padding-top: 20rpx;
  font-size: 26rpx;
}
.product {
  display: flex;
  align-items: center;
  justify-content: center;
}
.store {
  width: 96vw;
  background-color: #ffffff;
  margin: 20rpx auto;
  border-radius: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.item {
  display: flex;
  align-items: center;
  height: 80rpx;
}
.code {
  width: 300rpx;
  height: 300rpx;
  background: red;
  margin: 20rpx auto;
}
.button {
  width: 52px!important;
  height: 24px!important;
  background: #f85853!important;
  font-size: 12px!important;
  font-weight: 400!important;
  color: #ffffff!important;
}